{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Your feedback{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h3 style="padding-top: 15px">Send your feedback</h3>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}

        {{ form_errors(form) }}

        {#{{ form_widget(form) }}#}{# - first way - вся форма автоматом#}

        {#{% for fild in form %}#}
            {#{{ form_row(field) }}#}
        {#{% endfor %}#}{#- second way - перебор всех полей циклом#}

        {#{{ form_row(form.name) }}#}
        {#{{ form_row(form.email) }}#}
        {#{{ form_row(form.message) }}#}{#все поля вручную#}

        {{ form_row(form.name) }}

        <div class="form-group">
            {{ form_label(form.email) }}
            <div class="input-group mb-3">
                <div class="input-prepend">
                    <span class="input-group-text">@</span>
                </div>
                {{ form_widget(form.email) }}
            </div>
        </div>

        {{ form_row(form.message) }}

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
